doctype html
html(
  lang='eng'
  ng-app='chitchat'
  ng-controller='mainController as ROOT'
)
  head
    meta( charset='utf-8' )
    meta( name='viewport', content='width=device-width' )
    title ChitChat

    link(
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    )

    link( rel='stylesheet', href='css/vendor.min.css' )
    link( rel='stylesheet', href='css/chat.min.css' )

  body

    .app

      .root(
        ui-view='chat'
      )

        .side.left(
          ui-view='chat.left'
        )
          .tpl.user-bar(
            ui-view='chat.left.user-bar'
          )
          .tpl.dialogs(
            ui-view='chat.left.dialogs'
          )

        .side.right(
          ui-view='chat.right'
          flex
          layout = 'row'
          layout-wrap
          layout-align = 'end stretch'
        )
          .tpl.members(
            ui-view='chat.right.members'
            flex = 100
          )
          .tpl.history(
            ui-view='chat.right.history'
            flex = 100
          )
          .tpl.input(
            ui-view='chat.right.input'
            flex = 100
          )


    script( src='js/vendor.min.js' )
    script( src='js/chat.min.js' )